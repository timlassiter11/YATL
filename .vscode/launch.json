    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Playground",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}/packages/playground",
            "preLaunchTask": "Serve Playground",
            "sourceMapPathOverrides": {
                "webpack:///*": "${webRoot}/*",
                "/src/*": "${webRoot}/src/*"
            }
        }
    ]
}