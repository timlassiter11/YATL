{
  "name": "@timlassiter11/yatl-mono",
  "private": true,
  "workspaces": [
    "packages/yatl",
    "packages/yatl-ui",
    "packages/playground"
  ],
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "type:check": "npm run type:check --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "build": "npm run build --workspaces --if-present",
    "build:table": "npm run build --workspace=packages/yatl",
    "build:watch:table": "npm run build:watch --workspace=packages/yatl",
    "build:ui": "npm run build --workspace=packages/yatl-ui",
    "build:watch:ui": "npm run build:watch --workspace=packages/yatl-ui",
    "build:playground": "npm run build --workspace=packages/playground",
    "dev:playground": "npm run dev --workspace=packages/playground",
    "prepare": "husky"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7"
  },
  "version": "",
  "lint-staged": {
    "**/*.{ts,js,json,md,html,css}": [
      "prettier --write"
    ]
  }
}
