{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Table",
      "type": "npm",
      "script": "build --workspace=packages/yatl",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Watch Table",
      "type": "npm",
      "script": "build:watch --workspace=packages/yatl",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "pattern": {
          "regexp": "^$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "DTS",
          "endsPattern": "Build success in" 
        }
      }
    },
    {
      "label": "Build UI",
      "type": "npm",
      "script": "build --workspace=packages/yatl-ui",
      "group": "build",
      "dependsOn": "Build Table",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Watch UI",
      "type": "npm",
      "script": "build:watch --workspace=packages/yatl-ui",
      "group": "build",
      "dependsOn": "Watch Table",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "pattern": {
          "regexp": "^$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "DTS",
          "endsPattern": "Build success in" 
        }
      }
    },
    {
      "label": "Serve Playground",
      "type": "npm",
      "script": "dev", 
      "path": "packages/playground",
      "isBackground": true,
      "presentation": {
        "reveal": "never",
        "panel": "dedicated"
      },
      "dependsOn": ["Watch UI"],
      "problemMatcher": {
        "owner": "typescript",
        "pattern": {
          "regexp": "^$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Vite",
          "endsPattern": "Local:" 
        }
      }
    }
  ]
}