{
    "compilerOptions": {
        "target": "ES2020",
        "module": "nodenext",
        "declaration": true,
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "allowJs": true,
        "moduleResolution": "nodenext",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": false,
        "useDefineForClassFields": false,
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ES2023"
        ]
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}