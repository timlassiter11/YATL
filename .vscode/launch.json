{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Playground",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:5174/YATL/",
      "webRoot": "${workspaceFolder}",
      "preLaunchTask": "Serve Playground",
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ],
      "sourceMapPathOverrides": {
        // This was generated by Gemini. I didn't feel like fighting with it...
        "/src/*": "${workspaceFolder}/packages/playground/src/*",
        "../yatl/src/*": "${workspaceFolder}/packages/yatl/src/*",
        "../yatl-ui/src/*": "${workspaceFolder}/packages/yatl-ui/src/*",
        "/*": "${workspaceFolder}/*"
      }
    }
  ]
}
