{
    "compilerOptions": {
        "target": "ES6",
        "module": "ESNext",
        "declaration": true,
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "allowJs": true
    },
    "include": ["src", "tests"],
    "exclude": [
        "node_modules",
        "dist"
    ]
}