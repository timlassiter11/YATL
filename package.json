{
  "name": "@timlassiter11/yatl",
  "version": "1.0.19",
  "description": "Yet another table library with all of the standard bells and whistles.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "unpkg": "./dist/yatl.min.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "sideEffects": [
    "./dist/index.mjs",
    "./dist/index.js",
    "./src/setup-context.ts",
    "./src/index.ts"
  ],
  "keywords": [
    "table",
    "datatable",
    "typescript",
    "javascript",
    "library"
  ],
  "author": "Timothy Lassiter <timlassiter11@gmail.com> (https://github.com/timlassiter11/YATL)",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "scripts": {
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "format": "prettier src/** --write",
    "format:check": "prettier src/** --check",
    "type:check": "npx tsc --noEmit",
    "build": "tsup",
    "start": "web-dev-server --node-resolve",
    "start:watch": "web-dev-server --node-resolve --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "preversion": "npm run format && npm test",
    "release": "npm version patch && git push origin main --follow-tags"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/timlassiter11/YATL"
  },
  "bugs": {
    "url": "https://github.com/timlassiter11/YATL/issues"
  },
  "homepage": "https://github.com/timlassiter11/YATL#readme",
  "engines": {
    "node": ">22.0.0"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@types/node": "^22.15.17",
    "@vitest/browser-playwright": "^4.0.18",
    "@web/dev-server": "^0.4.6",
    "esbuild": "^0.25.4",
    "eslint": "^9.28.0",
    "prettier": "^3.5.3",
    "tsup": "^8.4.0",
    "typedoc": "^0.28.13",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.1",
    "vitest": "^4.0.18",
    "vitest-browser-lit": "^1.0.1"
  },
  "dependencies": {
    "@floating-ui/dom": "^1.7.5",
    "@lit-labs/virtualizer": "^2.1.1",
    "@lit/context": "^1.1.6",
    "lit": "^3.3.2"
  }
}
